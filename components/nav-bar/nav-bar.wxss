/* components/nav-bar/nav-bar.wxss */
/* 自定义导航栏 */
.nav{
  display: flex;
  height:44px;
  color:#fff
}
.nav .left,.nav .right{
  width:120rpx;
}
.nav .center{
  flex:1;
}
.left,.center,.right{
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 控制内容展示 */
.left .icon {
  width: 40rpx;
  height: 40rpx;
}
.default{
  display:none;
}
.slot:empty + .default{
  display: block;
}