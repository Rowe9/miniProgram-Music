/* pages/detail-video/detail-video.wxss */
page {
  /* 把页面的高度固定下来，不要被内容撑开，便于后面计算滚动页面的高度 */
  height:100vh;
}
.scroll{
  height:calc(100% - 225px);
}
.video{
  width: 100%;
  /* position: fixed;
  top:0;
  left:0;
  z-index:999; */
}
.info{
  padding: 25rpx;
}
.info .name{
  font-weight: 700;
  font-size:40rpx;
  padding-bottom: 10rpx;
}
.info .artist{
  padding-bottom: 10rpx;
font-size:30rpx;
color:#666;

}

.info .playcount{
font-size:30rpx;
color:#666;
}


/* 推荐视频 */

.suggest{
  padding: 25rpx;
  /* margin-top:225px; */
}
.suggest .BigTitle{
margin-bottom: 30rpx;
}
.content{
  display: flex;
  overflow: hidden;
  margin-bottom: 20rpx;
  /* background-color: pink; */
}
.left{
  width: 33.3%;
  position: relative;

}
.left .image{
  width: 100%;
  vertical-align: middle;
  border-radius:5px;
}
.left .playcount{
 position: absolute;
 bottom: 0rpx;
 right: 10rpx;
 color:#fff;
 font-size:30rpx;
}
.right{
flex:1;
padding:10rpx 10rpx;
}
.right .title{
font-size:30rpx;
overflow: hidden;
}
.right .userName{
font-size:25rpx;
color:#666
}